<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/account_toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/views_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/default_margin_or_padding"
                android:layout_marginTop="@dimen/default_large_margin_or_padding"
                android:orientation="vertical" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/default_very_large_margin_or_padding"
                android:layout_marginRight="@dimen/default_very_large_margin_or_padding"
                android:orientation="vertical">

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/termini_condizioni"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/default_large_margin_or_padding"
                    android:gravity="center"
                    android:textColor="@color/lightGrey" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/signup"
                    style="@style/LoginButtonStyle"
                    android:layout_marginBottom="@dimen/default_very_large_margin_or_padding"
                    android:text="@string/Iscriviti" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>