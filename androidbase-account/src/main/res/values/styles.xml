<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="EditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:inputType">textEmailAddress</item>
        <item name="android:theme">@style/ColorControlTheme</item>
        <item name="android:layout_marginBottom">@dimen/default_margin_or_padding</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="ColorControlTheme">
        <item name="colorControlNormal">@color/lightGrey</item>
    </style>

    <style name="SwitchStyle" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/default_very_large_margin_or_padding</item>
        <item name="android:paddingBottom">@dimen/default_very_large_margin_or_padding</item>
        <item name="android:paddingLeft">@dimen/default_very_large_margin_or_padding</item>
        <item name="android:paddingRight">@dimen/default_very_large_margin_or_padding</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAppearance">@android:style/TextAppearance</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="LoginPrimaryTextStyle" parent="android:TextAppearance">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_marginRight">@dimen/default_very_large_margin_or_padding</item>
        <item name="android:layout_marginLeft">@dimen/default_very_large_margin_or_padding</item>
        <item name="android:layout_marginBottom">@dimen/default_very_large_margin_or_padding</item>
    </style>

    <style name="LoginSecondaryTextStyle" parent="LoginPrimaryTextStyle">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/lightGrey</item>
        <item name="android:layout_marginTop">@dimen/default_very_large_margin_or_padding</item>
    </style>

    <style name="LoginButtonStyle" parent="android:TextAppearance">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">@dimen/default_very_large_margin_or_padding</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:padding">@dimen/default_large_margin_or_padding</item>
    </style>

    <style name="FacebookButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/default_large_margin_or_padding</item>
        <item name="android:paddingBottom">@dimen/default_large_margin_or_padding</item>
        <item name="android:paddingLeft">@dimen/default_very_large_margin_or_padding</item>
        <item name="android:paddingRight">@dimen/default_very_large_margin_or_padding</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="GoogleSignInButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/default_margin_or_padding</item>
        <item name="android:background">@drawable/google_button</item>
        <item name="android:drawableLeft">@drawable/btn_google_light_normal</item>
        <item name="android:drawableStart">@drawable/btn_google_light_normal</item>
        <item name="android:drawableRight">@drawable/btn_google_light_normal</item>
        <item name="android:drawableEnd">@drawable/btn_google_light_normal</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAppearance">@android:style/TextAppearance</item>
        <item name="android:text">@string/common_signin_button_text_long</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
    </style>

</resources>