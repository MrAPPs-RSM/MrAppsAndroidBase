<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/image_tutorial"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitCenter"
        android:layout_above="@+id/titoli_tutorial"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/titoli_tutorial"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/default_very_large_margin_or_padding"
        android:orientation="vertical">

        <android.support.v7.widget.AppCompatTextView
            style="@style/TutorialTitle"
            android:id="@+id/title"/>

        <android.support.v7.widget.AppCompatTextView
            style="@style/TutorialSubTitle"
            android:id="@+id/subtitle"/>

    </LinearLayout>


</RelativeLayout>